<body>
    <div class ="container">
        
        @* THIS IS THE FILTER PART OF THE SITE
        <div class = "filtersContainer">

         <img class = "BackButtonImage" src="images/backButton.png" alt="Image is not showing" width="30px" @onclick = "NavigateToSearchPage" /> 
           
            <div class = "filtersNoSignOut">
                <p class = "headerText">Filters</p>
                <ul>
                    <div class = "ListItemGeneral" id="Subject">
                        <li>Subject</li>
                    </div>
                        <div class="listItemNotGeneral">
                            
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@C#">
                            <li>C#</li>
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@Java">
                            <li>Java</li>
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@.NET">
                            <li>.NET</li>
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@Docker">
                            <li>Docker</li>
                        </div>                    
                    
                    <div class = "ListItemGeneral">
                        <li>Type of Resource</li>
                    </div>
                        <div class="listItemNotGeneral">
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@Document">
                            <li>Document</li>
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@Video">
                            <li>Video</li>
                        </div>  
                    
                    <div class = "ListItemGeneral" id="Disys">
                        <li>Release Year</li>
                    </div>  
                        <div class="listItemNotGeneral">
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@2010">
                            <li>2010</li>
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@2011">
                            <li>2011</li>
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@2012">
                            <li>2012</li>
                            <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@2013">
                            <li>2013</li>
                        </div>  

                    
                </ul>
            </div> 

            @* New div for filters *@
            <div class="filtersNoSignOut">
                <form method="post">
                <table>
                    
                    @foreach (var i in Database)
                    {
                        <tr>
                            <th>
                                Subject
                            </th>
                        </tr>
                        <tr>
                            <td>
                                <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@i.Value" checked="@i.Selected">
                            </td>
                            <td>
                                <label for="@i.Value"> @i.Text </label>
                            </td>
                        </tr>
                    }

                </table>
                <table>
                    @foreach (var i in Database)
                    {
                        <tr>
                            <th>
                                Resource Type
                            </th>
                        </tr>
                        <tr>
                            <td>
                                <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@i.Value" checked="@i.Selected">
                            </td>
                            <td>
                                <label for="@i.Value"> @i.Text </label>
                            </td>
                        </tr>
                    }

                </table>
                <table>
                    @foreach (var i in Database)
                    {
                        <tr>
                            <th>
                                Release Year
                            </th>
                        </tr>
                        <tr>
                            <td>
                                <input name="AreChecked" class="listItemWithCheckbox" type="checkbox" value="@i.Value" checked="@i.Selected">
                            </td>
                            <td>
                                <label for="@i.Value"> @i.Text </label>
                            </td>
                        </tr>
                    }

                </table>

                <input type="search" value="search" @onclick="search">

                </form>

            </div>
            


            @* sign out part *@
            <div class = "filtersWithSignOut">
                <input class ="imageSignOut" type = "image" src="images/signOutWhite.png" @onclick = "NavigateToLoginPage"/>
                 <div class ="imageSignOutText">                                
                    <p>Sign out</p>
                </div>
            </div>
        </div>

    
        @* THIS IS THE RESOURCE DISPLAY OF THE SITE *@
        <div class = "resourcesContainer">

            @* Searchbar *@
            <div class = "searchField">    
                <div class="searchBar">
                    <img class ="forstorelsesglas" src="images/magnifyingGlass.png" alt="Image is not showing"/>
                    <div class="searchInput">
                        <input class="input" type="text">
                    </div>
                </div>
                <input class = "searchButton" type = "image" src = "images/searchButton.png">
            </div>  

